# Database Configuration
DB_HOST=mysql.railway.internal
DB_PORT=3306
DB_NAME=railway
DB_USER=root
DB_PASSWORD=your_password_here

# Site Configuration
SITE_URL=https://kacmazlar-insaat-website-production.up.railway.app
SITE_NAME=Kacmazlar İnşaat
